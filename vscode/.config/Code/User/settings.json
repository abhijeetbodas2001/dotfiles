{
    // remote SSH
    "remote.SSH.remotePlatform": {
        "19": "linux",
        "053": "linux"
    },
    "terminal.integrated.fontFamily": "Delugia, monospace",
    "editor.fontFamily": "Delugia, monospace",
    "editor.codeLensFontFamily": "Delugia, monospace",
    "editor.inlayHints.fontFamily": "Delugia, monospace",
    "debug.console.fontFamily": "Delugia, monospace",
    "scm.inputFontFamily": "Delugia, monospace",
    "notebook.output.fontFamily": "Delugia, monospace",
    "chat.editor.fontFamily": "Delugia, monospace",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#484141",
        "editor.background": "#000000",
        "sideBar.background": "#000000",
        "badge.background": "#000000",
        "banner.background": "#000000",
        "tab.hoverBackground": "#000000",
      },
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "Default Dark+",


    // neovim plugin settings
    "vscode-neovim.useCtrlKeysForNormalMode": false,
    "vscode-neovim.useCtrlKeysForInsertMode": false,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "keyboard.dispatch": "keyCode",
    "vscode-neovim.neovimClean": true,
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/local/bin/nvim",


    // language specific settings
    "jupyter.askForKernelRestart": false,
    "python.languageServer": "None",
    "python.analysis.completeFunctionParens": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.autoClosingBrackets": "never"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // spell checker extension
    "cSpell.userWords": [
        "abhijeetbodas",
        "casteist",
        "IITB",
        "testcase",
        "testcases"
    ],

    // behaviour settings
    "notebook.confirmDeleteRunningCell": false,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "diffEditor.renderSideBySide": false,

    // disable shit
    "redhat.telemetry.enabled": false,
    "extensions.autoCheckUpdates": false,
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.autoUpdate": false,
    "editor.copyWithSyntaxHighlighting": false,
    "security.workspace.trust.untrustedFiles": "open",
    "prettier.proseWrap": "always",
    "telemetry.telemetryLevel": "off",
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.emptyWindow": false,
    "python.defaultInterpreterPath": "/home/apb/code/.venv",
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "/home/apb/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/19.1.2/clangd_19.1.2/bin/clangd",
    "makefile.configureOnOpen": false,
    "editor.stickyScroll.enabled": false,
    "vscode-neovim.ctrlKeysForInsertMode": [],
    "extensions.ignoreRecommendations": true,
    "rust-analyzer.testExplorer": true,
    "update.mode": "none",
    "editor.autoClosingQuotes": "never",
    "editor.inlayHints.enabled": "off",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "dataWrangler.columnInsights.displayOnOpen": false,
    "git.confirmSync": false,
    "git.autofetch": true,
    "rust-analyzer.numThreads": 4,
    "rust-analyzer.cachePriming.numThreads": 4,
    "rust-analyzer.cargo.extraEnv": {
        "RUST_TEST_THREADS": 2,
        "CARGO_BUILD_JOBS": 2,
    },
    "rust-analyzer.runnables.extraEnv": null,

    // Vim settings
    "vim.useSystemClipboard": true,
    // j/k over folds should not open the fold
    "vim.foldfix": true,
    "vim.handleKeys": {
        "<C-p>": false,
        "<C-b>": false,
        "<C-d>": true,
        "<C-s>": false,
        "<C-z>": false
    },
    "vim.normalModeKeyBindings": [
        // Git
        {
            "before": ["]", "c"],
            "commands": [
                "workbench.action.editor.nextChange",
            ],
            "silent": true
        },
        {
            "before": ["[", "c"],
            "commands": [
                "workbench.action.editor.previousChange",
            ],
            "silent": true
        },

        // LSP
        {
            "before": ["K"],
            "commands": [
                "editor.action.showHover",
            ],
            "silent": true
        },

        // Folds
        {
            "before": ["zo"],
            "commands": [
                "editor.unfold",
            ],
            "silent": true
        },
        {
            "before": ["zc"],
            "commands": [
                "editor.fold",
            ],
            "silent": true
        },
        {
            "before": ["za"],
            "commands": [
                "editor.toggleFold",
            ],
            "silent": true
        },
        {
            "before": ["zR"],
            "commands": [
                "editor.unfoldAll",
            ],
            "silent": true
        },
        {
            "before": ["zM"],
            "commands": [
                "editor.foldAll",
            ],
            "silent": true
        },
    ],

    "workbench.reduceMotion": "on",
    "rust-analyzer.checkOnSave": false,
    "editor.fontSize": 13,
    "debug.allowBreakpointsEverywhere": true,
    "ruff.path": [
        "/home/apb/code/ruff/target/debug/red_knot"
    ]
}
